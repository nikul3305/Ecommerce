<% layout('layout/auth') -%>
<h1>Welcome <%= admin.name %></h1>


<div class="container ">
    <div class="row d-flex justify-content-center  ">
        <div class="col-4 m-1">

            <% if (typeof success !== 'undefined' && success) { %>
                <div class="toast show position-fixed top-0  m-3 bg-success text-white" role="alert" aria-live="assertive" aria-atomic="true">
                    <div class="toast-header">
                        <strong class="me-auto">Login</strong>
                        <small>Just now</small>

                        <button type="button" class="btn-close" data-bs-dismiss="toast" aria-label="Close"></button>
                    </div>
                    <div class="toast-body">
                        <%= success %>
                    </div>
                </div>
            <% } %>
        </div>
    </div>
</div>



<div class="d-flex justify-content-between flex-wrap flex-md nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
    <h1 class="h2">user data</h1>
    <div class="btn-toolbar mb-2 mb-md 0">
        <div class="btn-group me-2  ">
            <a href="#" class="btn btn-sm btn-outline-primary">+ New User</a>
        </div>
    </div>
</div>




<div class="table-responsive m-3">

    <table class="table table-striped table-sm table-success text-center">
        <thead>
        <tr >
            <th scope="col">Full Name</th>
            <th scope="col">mobileNO</th>
            <th scope="col">Email</th>
            <th scope="col" class="text-end ">Action</th>
        </tr>
        </thead>

        <tbody>
        <% data.forEach(element => { %>
            <tr class="align-middle">
                <td><%= element.name %></td>
                <td><%= element.mobileNo %></td>
                <td><%= element.email %></td>
                <td class="text-end">

                    <div class="d-flex flex-row justify-content-end gap-2  ">

                        <a href="/view/<%= element._id %>" type="button" class="btn btn-primary btn-small">
<!--                            <i class="bi bi-eye"></i>-->view
                        </a>

                        <a href="/edit/<%= element._id %>" type="button" class="btn btn-warning btn-small">
<!--                            <i class="bi bi-pencil"></i>-->edit
                        </a>

                        <form action="/edit/<%= element._id %>?_method=DELETE" method="POST" class="position-relative">
                            <button type="submit" class="btn btn-danger btn-small">
<!--                                <i class="bi bi-person-x"></i>-->delete
                            </button>
                        </form>

                    </div>


                </td>
            </tr>
        <% }) %>
        </tbody>
    </table>
</div>



<a href="/logout"><button class="btn btn-danger">logout</button></a>















