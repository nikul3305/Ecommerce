<% layout('layout/auth') -%>

<div class="container-fluid">
    <div class="row">

        <!--   sidebar -->
        <% include layout/sidebar %>
        <!--   main content  -->
        <div class="  col-lg-10 col-12 offset-lg-2  " style="margin-top: 70px;">
            <div class="row mt-4">
                <div class="col-md-12 ">
                    <div class="card ">
                        <div class="card-header ">
                            <h2>Admin profile</h2>
                        </div>
                        <div class="card-body d-flex flex-column gap-3">
                            <div>
                                <label >Name</label>
                                <input type="text" class="form-control" value="<%= admin.name %>" readonly>
                            </div>
                            <div>
                                <label >Email</label>
                                <input type="text" class="form-control" value="<%= admin.email %>" readonly>
                            </div>
                            <div>
                                <label >Mobile number</label>
                                <input type="text" class="form-control" value="<%= admin.mobileNo %>" readonly>
                            </div>
                        </div>
                        <div>
                            <a href="/admin/dashBord"><button class="btn btn-warning ms-4 mb-4">Back</button></a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
