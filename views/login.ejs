<% layout('layout/auth') -%>

<div class="container ">
    <div class="row d-flex justify-content-center  ">
        <div class="col-4 m-1">
            <% if (typeof message !== 'undefined' && message) { %>
                <div class="toast show position-fixed top-0   m-3 bg-success text-white" role="alert" aria-live="assertive" aria-atomic="true">
                    <div class="toast-header">
                        <strong class="me-auto">Success</strong>
                        <small>Just now</small>
                        <button type="button" class="btn-close btn-close" data-bs-dismiss="toast" aria-label="Close"></button>
                    </div>
                    <div class="toast-body">
                        <%= message %>
                    </div>
                </div>
            <% } %>
        </div>
    </div>
</div>


<!-- if login messege  -->
<div class="container ">
    <div class="row d-flex justify-content-center  ">
        <div class="col-4 m-1">
            <% if (typeof error !== 'undefined') { %>
                <div class="toast show position-fixed top-0 bg-danger text-white" role="alert" aria-live="assertive" aria-atomic="true">
                    <div class="toast-header">
                        <strong class="me-auto">Login</strong>
                        <small>Just now</small>
                        <button type="button" class="btn-close" data-bs-dismiss="toast" aria-label="Close"></button>
                    </div>
                    <div class="toast-body ">
                        <%= error %>
                    </div>
                </div>
            <% } %>
        </div>
    </div>
</div>

<!-- signup succesful messege -->
<div class="container ">
    <div class="row d-flex justify-content-center  ">
        <div class="col-4 m-1">
                    <% if (typeof success !== 'undefined') { %>
                        <div class="toast show position-fixed top-0  m-3 bg-success text-white" role="alert" aria-live="assertive" aria-atomic="true">
                            <div class="toast-header ">
                                <strong class="me-auto">Success</strong>
                                <small>Just now</small>
                                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="toast" aria-label="Close"></button>
                            </div>
                            <div class="toast-body ">
                                <%= success %>
                            </div>
                        </div>
                    <% } %>
        </div>
    </div>
</div>

<!-- login form  -->
<div class="container-md-fluid  h-100  ">
    <div class="row  h-100 d-flex justify-content-around align-items-center">
        <div class=" col-md-3  offset-7 ">
            <div class="card">
                <div class="card-body">
                    <form action="/admin/login" method="post" class="d-flex flex-column p-1 " >
                        <h3 class="text-center mb-4 fw-bold">Welcome back</h3>

                        <div class="mb-3">
                            <input type="email" name="email" id="email" class="form-control" placeholder="Email" required>
                        </div>

                        <div class="mb-3">
                            <input type="password" name="password" id="password" class="form-control" placeholder="Password" required>
                        </div>

                        <div class="mb-3 d-flex justify-content-between align-items-center">
                            <div>
                                <input type="checkbox" id="remember">
                                <label for="remember">Remember me</label>
                            </div>
                            <a href="/admin/signup">Forgot Password?</a>
                        </div>

                        <div class="d-grid">
                            <input type="submit" value="Login" class="btn btn-primary w-100">
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
