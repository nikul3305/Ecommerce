<% layout('layout/auth') -%>



<!-- login form  -->

    <div class="container-md-fluid   bg-side h-100">
        <div class="row   d-flex justify-content-around align-items-center h-100" >
            <div class=" col-md-3  offset-7 ">
                <div class="card">
                    <div class="card-body">
                        <form action="/admin/login" method="post" class="d-flex flex-column p-1 " >
                            <h3 class="text-center mb-4 fw-bold">Welcome back</h3>

                            <div class="mb-3">
                                <input type="email" name="email" id="email" class="form-control" placeholder="Email" required>
                            </div>

                            <div class="mb-3">
                                <input type="password" name="password" id="password" class="form-control" placeholder="Password" required>
                            </div>

                            <div class="mb-3 d-flex justify-content-between align-items-center">
                                <div>
                                    <input type="checkbox" id="remember">
                                    <label for="remember">Remember me</label>
                                </div>
                                <a href="/admin/signup">signup</a>
                            </div>

                            <div class="d-grid">
                                <input type="submit" value="Login" class="btn btn-primary w-100">
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>

<% include layout/message.ejs %>