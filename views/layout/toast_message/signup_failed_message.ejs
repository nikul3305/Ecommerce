<!--signup failed message -->
<div class="container ">
    <div class="row d-flex justify-content-center  ">
        <div class="col-4 m-1">
            <% if (typeof signup_err !== 'undefined') { %>
                <div class="toast show position-fixed top-0 m-0 z-3 bg-danger text-white" role="alert" aria-live="assertive" aria-atomic="true">
                    <div class="toast-header">
                        <strong class="me-auto">Login</strong>
                        <small>Just now</small>
                        <button type="button" class="btn-close" data-bs-dismiss="toast" aria-label="Close"></button>
                    </div>
                    <div class="toast-body ">
                        <%= signup_err %>
                    </div>
                </div>
            <% } %>
        </div>
    </div>
</div>