

<% layout('layout/auth') -%>


<div class="container-fluid">
    <div class="row">
        <% include layout/sidebar %>
        <div class="  col-lg-10 col-12 offset-lg-2  " style="margin-top: 80px;">
            <div class="row mt-4 ">
                <form action="" method="post" class="needs-validation" novalidate>
                    <!-- Product Name -->
                    <div class="form-floating mb-3">
                        <div class="col-md-4">
                            <label for="validationDefault01" class="form-label">product name</label>
                            <input type="text"  class="form-control" name="name" id="validationDefault01" aria-label="readonly input name"  value="<%= view.name %>" readonly>
                        </div>
                    </div>
                    <!-- Product Description -->
                    <div class="mb-3">
                        <label for="validationTextarea" class="form-label">description</label>
                        <textarea class="form-control text-dark" id="validationTextarea" name="description" aria-label="readonly input description"   readonly>  <%= view.description %> </textarea>
                    </div>
                    <!-- Product Status -->
                    <div class="mb-3">
                        <label class="form-label d-block">Status</label>
                        <div class="form-check form-check-inline">
                            <input class="form-check-input" type="radio" name="status" id="statusActive" value="active"   <%= view.status === 'active' ? 'checked' : '' %>  disabled>
                            <label class="form-check-label" for="statusActive">Active</label>
                        </div>
                        <div class="form-check form-check-inline">
                            <input class="form-check-input" type="radio" name="status" id="statusInactive" value="inactive"   <%= view.status === 'active' ? 'checked' : '' %>  disabled>
                            <label class="form-check-label" for="statusInactive">Inactive</label>
                        </div>
                        <div class="invalid-feedback d-block">
                            Please select a status.
                        </div>
                    </div>
                    <!--  Button -->
                    <a href="/admin/product" class="text-decoration-none"> <button class="btn btn-primary" type="button"> Back </button></a>

                </form>
            </div>
        </div>
